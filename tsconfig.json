{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "WebWorker",
    ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    // TS
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    // JS
    "allowJs": true,
    "checkJs": true,
  },
  "exclude": [
    "build",
    "**/dev",
    "**/dist",
    "**/node_modules",
    ".vscode-test*",
  ],
}
