{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"],
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "/*", "close": " */", "notIn": ["string"] },
  ],
  "autoCloseBefore": ";:.,=}])> \n\t",
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
  ],
  "folding": {
    "markers": {
      "start": "^[ \\t]*(?:#if(?:n?def)?|//#region)\\b",
      "end": "^[ \\t]*(?:#endif|//#endregion)\\b",
    },
  },
}
